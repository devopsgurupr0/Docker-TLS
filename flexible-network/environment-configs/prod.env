# Production Environment Configuration
# High availability and security focused

###################################
# Docker Host Configuration
###################################
DOCKER_HOST_IP="10.0.2.100"
DOCKER_HOST_PORT="2376"
DOCKER_HOST_USER="root"

###################################
# Network Configuration
###################################
# Use overlay network for multi-host production deployment
NETWORK_TYPE="overlay"
NETWORK_NAME="jenkins_prod_net"

# Overlay network settings (Docker Swarm)
OVERLAY_SUBNET="10.0.9.0/24"
OVERLAY_GATEWAY="10.0.9.1"

###################################
# Agent Configuration
###################################
NUM_AGENTS="10"
AGENT_NAME_PREFIX="jenkins-prod-agent"
AGENT_MEMORY_LIMIT="2g"    # Higher memory for production workloads
AGENT_CPU_LIMIT="2.0"      # Higher CPU for production workloads
AGENT_RESTART_POLICY="always"  # Always restart in production

###################################
# SSH Configuration
###################################
SSH_KEY_PATH="./.ssh/jenkins_ssh_key_prod.pub"
SSH_PRIVATE_KEY_PATH="./.ssh/jenkins_ssh_key_prod"
SSH_PORT="22"

###################################
# TLS Configuration
###################################
TLS_ENABLED="true"
TLS_CERT_DIR="./docker-certs-prod"
TLS_VERIFY="true"

###################################
# Production-specific Settings
###################################
IMAGE_NAME="jenkins-ssh-agent-prod"
LOG_LEVEL="WARN"
ENABLE_DEBUG="false"

# Security settings
ENABLE_SECURITY_SCANNING="true"
ROTATE_KEYS_DAYS="90"
ENABLE_AUDIT_LOGGING="true"

# High availability settings
ENABLE_HEALTH_CHECKS="true"
HEALTH_CHECK_INTERVAL="15s"
HEALTH_CHECK_TIMEOUT="5s"
HEALTH_CHECK_RETRIES="5"

# Resource limits and monitoring
MAX_MEMORY_USAGE="90%"
MAX_CPU_USAGE="85%"
ENABLE_RESOURCE_MONITORING="true"
ENABLE_PERFORMANCE_METRICS="true"

# Backup and disaster recovery
ENABLE_AUTOMATED_BACKUPS="true"
BACKUP_RETENTION_DAYS="30"
ENABLE_DISASTER_RECOVERY="true"

# Compliance and governance
ENABLE_COMPLIANCE_CHECKS="true"
ENABLE_VULNERABILITY_SCANNING="true"
SECURITY_POLICY_ENFORCEMENT="strict"

# Load balancing (if using multiple Docker hosts)
ENABLE_LOAD_BALANCING="true"
LOAD_BALANCER_ALGORITHM="round_robin"

# Production network security
NETWORK_ISOLATION="strict"
FIREWALL_RULES="restrictive"
ENABLE_NETWORK_MONITORING="true"