# Development Environment Configuration
# Optimized for local development and testing

###################################
# Docker Host Configuration
###################################
DOCKER_HOST_IP="192.168.1.100"
DOCKER_HOST_PORT="2376"
DOCKER_HOST_USER="root"

###################################
# Network Configuration
###################################
# Use bridge network for development (easier setup, no host interface required)
NETWORK_TYPE="bridge"
NETWORK_NAME="jenkins_dev_net"

# Bridge network settings
BRIDGE_SUBNET="172.18.0.0/16"
BRIDGE_GATEWAY="172.18.0.1"
BRIDGE_IP_RANGE_START="10"

###################################
# Agent Configuration
###################################
NUM_AGENTS="1"
AGENT_NAME_PREFIX="jenkins-dev-agent"
AGENT_MEMORY_LIMIT="512m"  # Lower memory for development
AGENT_CPU_LIMIT="0.5"      # Lower CPU for development
AGENT_RESTART_POLICY="no"  # Don't auto-restart in dev

###################################
# SSH Configuration
###################################
SSH_KEY_PATH="./.ssh/jenkins_ssh_key_dev.pub"
SSH_PRIVATE_KEY_PATH="./.ssh/jenkins_ssh_key_dev"
SSH_PORT="22"

###################################
# TLS Configuration
###################################
TLS_ENABLED="false"  # Disable TLS for easier development
TLS_CERT_DIR="./docker-certs-dev"
TLS_VERIFY="false"

###################################
# Development-specific Settings
###################################
IMAGE_NAME="jenkins-ssh-agent-dev"
LOG_LEVEL="DEBUG"
ENABLE_DEBUG="true"

# Development ports (SSH access via host ports)
# Agent 1: localhost:2201
# Agent 2: localhost:2202
# etc.