# Staging Environment Configuration
# Production-like setup for testing

###################################
# Docker Host Configuration
###################################
DOCKER_HOST_IP="10.0.1.50"
DOCKER_HOST_PORT="2376"
DOCKER_HOST_USER="root"

###################################
# Network Configuration
###################################
# Use macvlan for production-like networking
NETWORK_TYPE="macvlan"
NETWORK_NAME="jenkins_staging_net"

# Macvlan network settings
MACVLAN_SUBNET="10.0.1.0/24"
MACVLAN_GATEWAY="10.0.1.1"
MACVLAN_PARENT_INTERFACE="eth0"
MACVLAN_IP_RANGE_START="100"  # Agents: 10.0.1.100, 10.0.1.101, etc.

###################################
# Agent Configuration
###################################
NUM_AGENTS="3"
AGENT_NAME_PREFIX="jenkins-staging-agent"
AGENT_MEMORY_LIMIT="1g"
AGENT_CPU_LIMIT="1.0"
AGENT_RESTART_POLICY="unless-stopped"

###################################
# SSH Configuration
###################################
SSH_KEY_PATH="./.ssh/jenkins_ssh_key_staging.pub"
SSH_PRIVATE_KEY_PATH="./.ssh/jenkins_ssh_key_staging"
SSH_PORT="22"

###################################
# TLS Configuration
###################################
TLS_ENABLED="true"
TLS_CERT_DIR="./docker-certs-staging"
TLS_VERIFY="true"

###################################
# Staging-specific Settings
###################################
IMAGE_NAME="jenkins-ssh-agent-staging"
LOG_LEVEL="INFO"
ENABLE_DEBUG="false"

# Monitoring and health checks
HEALTH_CHECK_INTERVAL="30s"
HEALTH_CHECK_TIMEOUT="10s"
HEALTH_CHECK_RETRIES="3"

# Resource monitoring
ENABLE_RESOURCE_MONITORING="true"
MAX_MEMORY_USAGE="80%"
MAX_CPU_USAGE="80%"