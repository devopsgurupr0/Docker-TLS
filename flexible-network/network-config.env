# Network Configuration File
# Customize these values for your environment

###################################
# Docker Host Configuration
###################################
DOCKER_HOST_IP="192.168.2.7"
DOCKER_HOST_PORT="2376"
DOCKER_HOST_USER="root"

###################################
# Network Configuration
###################################
# Network type: macvlan, bridge, host, overlay
NETWORK_TYPE="macvlan"
NETWORK_NAME="jenkins_net"

# For macvlan networks
MACVLAN_SUBNET="192.168.2.0/24"
MACVLAN_GATEWAY="192.168.2.1"
MACVLAN_PARENT_INTERFACE="eth0"
MACVLAN_IP_RANGE_START="50"  # Agents will get IPs starting from .50

# For bridge networks
BRIDGE_SUBNET="172.20.0.0/16"
BRIDGE_GATEWAY="172.20.0.1"
BRIDGE_IP_RANGE_START="10"  # Agents will get IPs starting from .10

# For overlay networks (Docker Swarm)
OVERLAY_SUBNET="10.0.9.0/24"
OVERLAY_GATEWAY="10.0.9.1"

###################################
# Agent Configuration
###################################
NUM_AGENTS="1"
AGENT_NAME_PREFIX="jenkins-agent"
AGENT_MEMORY_LIMIT="1g"
AGENT_CPU_LIMIT="1.0"
AGENT_RESTART_POLICY="unless-stopped"

###################################
# SSH Configuration
###################################
SSH_KEY_PATH="./.ssh/jenkins_ssh_key.pub"
SSH_PRIVATE_KEY_PATH="./.ssh/jenkins_ssh_key"
SSH_PORT="22"

###################################
# TLS Configuration
###################################
TLS_ENABLED="true"
TLS_CERT_DIR="./docker-certs"
TLS_VERIFY="true"

###################################
# Environment-specific Configurations
###################################

# Development Environment
DEV_DOCKER_HOST_IP="192.168.1.100"
DEV_NETWORK_TYPE="bridge"
DEV_BRIDGE_SUBNET="172.18.0.0/16"
DEV_NUM_AGENTS="1"

# Staging Environment
STAGING_DOCKER_HOST_IP="10.0.1.50"
STAGING_NETWORK_TYPE="macvlan"
STAGING_MACVLAN_SUBNET="10.0.1.0/24"
STAGING_MACVLAN_GATEWAY="10.0.1.1"
STAGING_NUM_AGENTS="3"

# Production Environment
PROD_DOCKER_HOST_IP="10.0.2.100"
PROD_NETWORK_TYPE="overlay"
PROD_OVERLAY_SUBNET="10.0.9.0/24"
PROD_NUM_AGENTS="10"

###################################
# Load Environment-specific Config
###################################
# Uncomment one of these to load environment-specific settings

# Development
# source_env_config "DEV"

# Staging
# source_env_config "STAGING"

# Production
# source_env_config "PROD"